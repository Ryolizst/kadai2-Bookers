<h1>Editing Book</h1>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>



<!-- バリデーションエラーメッセージを表示 -->
<% if @book.errors.any? %>
  <p><%= @book.errors.count %>error</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!-- Updateフォーム -->
<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %> <br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body, "Body" %> <br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book) %>
<%= link_to 'Back', books_path %>
